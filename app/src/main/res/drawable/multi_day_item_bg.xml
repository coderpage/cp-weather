<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/multi_day_item_bg_pressed"/>

            <stroke
                android:width="0.1dp"
                android:color="@color/multi_day_item_border"/>


        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >
            <solid android:color="@color/multi_day_item_bg_normal"/>

            <stroke
                android:width="0.1dp"
                android:color="@color/multi_day_item_border"/>

        </shape>
    </item>

</selector>