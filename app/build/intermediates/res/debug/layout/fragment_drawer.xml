<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".SlidingDrawerFragment">

    <TextView
        android:id="@+id/drawer_edit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="editCitysClick"
        android:clickable="true"
        android:text="编辑城市"
        android:textColor="#365"
        android:background="#cccc"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/drawer_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#cccc"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.05dp"
        />

    <TextView
        android:id="@+id/drawer_setting_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="settingClick"
        android:clickable="true"
        android:text="设置"
        android:textColor="#365"
        android:background="#cccc"
        android:paddingBottom="10dp"
        android:textSize="20sp"/>


</LinearLayout>
