<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/tv_add_city"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="addCity"
        android:text="+  添加城市"
        android:textSize="20sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#ddd"
        android:gravity="center_vertical"
        android:text="我的城市"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/lv_mycitys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ddd"
        android:dividerHeight="0.05dp" >
    </ListView>

    <TextView
        android:id="@+id/tv_delete_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:clickable="true"
        android:gravity="center"
        android:onClick="deleteCitys"
        android:text="删 除"
        android:textColor="#f00"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout><!-- From: file:/Users/abner-l/AndroidStudioProjects/BPweather/app/src/main/res/layout/activity_edit_citys.xml -->